<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mehmetsabir.onboardingkotlin">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/iconmarkerofmaps"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@drawable/iconmarkerofmaps"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".views.views.activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.views.activities.MainActivity" />
        <activity android:name=".views.views.activities.SearchActivity" />
        <activity android:name=".views.views.activities.FlightListActivity" />
        <activity android:name=".views.views.activities.HotelListActivity"></activity>
    </application>

</manifest>